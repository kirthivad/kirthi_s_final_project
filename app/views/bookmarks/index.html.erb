<div class="page-header">
  <h1>
    Bookmarks
    <a href="/bookmarks/new" class="btn btn-lg btn-success">New Bookmark</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recipe</th>
        <th>Instructions</th>
        <th>Actions</th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <%if bookmark.user_id == current_user.id %>
      <tr>
        <td>
          <a href="/recipes/<%= bookmark.recipe.id %>">
            <%= bookmark.recipe.recipe_name %>
          </a>
        </td>
        <td>
          <%= truncate(bookmark.recipe.instructions, length:130) %>
        </td>
        <td>
          <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn-link"><i class="fa fa-pencil fa-fw"></i>Edit</a>
          <a href="/delete_bookmark/<%= bookmark.id %>" class="btn-link" rel="nofollow"><i class="fa fa-trash-o fa-fw"></i>Delete</a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
    <%= paginate @bookmarks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
