<!-- Validation failure messages -->
<% if @recipe.errors.any? %>
  <% @recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Recipe</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_recipe" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for recipe_name -->
      <div class="form-group">
        <label for="recipe_name" class="control-label">
          Recipe name
        </label>

        <input type="text" id="recipe_name" name="recipe_name" placeholder="Recipe name" class="form-control" value="<%= @recipe.recipe_name %>">
      </div>

      <!-- Label and input for ingredient_list -->
      <div class="form-group">
        <label for="ingredient_list" class="control-label">
          Ingredient list
        </label>

        <textarea id="ingredient_list" name="ingredient_list" placeholder="Ingredient list" class="form-control" rows="3"><%= @recipe.ingredient_list %></textarea>
      </div>

      <!-- Label and input for instructions -->
      <div class="form-group">
        <label for="instructions" class="control-label">
          Instructions
        </label>

        <textarea id="instructions" name="instructions" placeholder="Instructions" class="form-control" rows="3"><%= @recipe.instructions %></textarea>
      </div>

      <!-- Label and input for recipe_type -->
      <div class="form-group">
        <label for="recipe_type" class="control-label">
          Recipe type
        </label>

        <input type="text" id="recipe_type" name="recipe_type" placeholder="Recipe type" class="form-control" value="<%= @recipe.recipe_type %>">
      </div>

      <button class="btn btn-success">
        Create Recipe
      </button>
      or
      <a href="/recipes">Cancel</a>
    </form>
  </div>
</div>
