<div class="page-header">
  <h3>Recipe #<%= @recipe.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Recipe Name</dt>
      <dd><%= @recipe.recipe_name %></dd>

      <dt>Ingredient List</dt>
      <dd><%= @recipe.ingredient_list %></dd>

      <dt>Instructions</dt>
      <dd><%= @recipe.instructions %></dd>

      <dt>Cuisine Type</dt>
      <dd><%= @recipe.recipe_type %></dd>

    </dl>

    <div class="btn-group-justified">
        <a href="/recipes" class="btn btn-primary">
          Back
        </a>
      <% if @recipe.user_id == current_user.id %>
        <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
      <% if @recipe.bookmarks.find_by(:user_id => current_user.id) %>
        <a href="/delete_bookmark/<%=@recipe.bookmarks.find_by(:user_id => current_user.id).id%>" class="btn btn-success">Remove Bookmark</a>
      <% else %>
        <div>
        <form action="/create_bookmark" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          
          <input type="hidden" name="user_id" value="<%=current_user.id%>">
      
          <input type="hidden" name="recipe_id" value="<%=@recipe.id%>">
      
          <button class="btn btn-success">
            <i class="fa fa-fw fa-heart-o"></i> Bookmark
          </button>
        </form>
        </div>
      <% end %>
    </div>
  </div>
</div>


<!-- A Recipe has many fans -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Fans of this Recipe
      </li>

      <% @recipe.fans.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.email %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
